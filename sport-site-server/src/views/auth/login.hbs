                            <li>
                                <label for="password">Password:</label>
                                <input type="password" class="inputFields" id="password" name="password" placeholder="*******" />
                            </li>

                            <li id="center-btn">
                                <button id="login-btn">Login</button>
                            </li>
                        </ul>
                    </form>
                </div>

            </section>



       
